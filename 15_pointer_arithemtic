// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int i=32;
    int *a=&i;
    printf("%d\n",a);
    a++; //is an asignment operator. It will be increasing the value of a
    printf("%d\n",a);
    a=a+1;
    printf("%d",a);

    return 0;
}

//bytes required to store a float is 4. a++ or a=a+1 increases the value of the pointer by 4 just as in case of int.
//bytes required to store a char is 1. a++ or a=a+1 increases the value of the pointer by a.
