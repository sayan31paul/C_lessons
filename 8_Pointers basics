// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int i=34;
    int *j=&i;  // j will now store the address of i which is an integer. The "int" before "*j" indicates that i is an integer.
    int *k=&j; // k will now store the address of j which is in turn storing the address of k.
    printf("The value of i is %d\n",i);
    printf("The address which stores i is %d \n",j); //Note that the address will change in every run.
    printf("The value of i obtained from the pointer is %d \n",*j);
    printf("The address of j is %d \n", k);
    return 0;
}

// char *i --> Here i will store the address of a character.
// float *i--> Here i will store the address of a float value.
